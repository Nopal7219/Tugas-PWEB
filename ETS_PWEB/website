	<script>
		function handleSubmit(e){
			e.preventDefault();
			const name = document.getElementById('lead-name').value.trim();
			const email = document.getElementById('lead-email').value.trim();
			const msg = document.getElementById('form-msg');
			if(!name || !email){
				msg.innerHTML = '<div style="color:#b91c1c">Mohon isi nama dan email.</div>';
				return false;
			}
			// Simulasi pengiriman — di proyek nyata kirim ke server
			msg.innerHTML = '';
			const success = document.createElement('div');
			success.className = 'form-success';
			success.textContent = 'Terima kasih, ' + name + '! Kami akan menghubungi Anda melalui ' + email + ' dalam 1×24 jam.';
			msg.appendChild(success);

			// Reset form setelah beberapa detik
			setTimeout(()=>{document.getElementById('lead-form').reset()},2500);
			return false;
		}

		function toggleFaq(el){
			const a = el.nextElementSibling;
			const open = a.style.display === 'block';
			// close any open answer in same section
			const parent = el.parentElement.parentElement;
			parent.querySelectorAll('.faq-a').forEach(node => node.style.display = 'none');
			parent.querySelectorAll('.faq-q span').forEach(s => s.textContent = '+');
			if(!open){ a.style.display = 'block'; el.querySelector('span').textContent = '−'; }
		}
	</script>
